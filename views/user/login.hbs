<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Login</h2>
            <form action="/login" method="POST">
               {{#if loginErr}}
                    <p class="error">{{loginErr}}</p>
               {{/if}} 
              <div class="form-group">
                    <label for="">Email Address</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="">Password</label>
                <input type="password" name="Password" class="form-control" class="Enter Password">
                </div>
              <a href="/signup">Create new account?</a>
                <button type="submit" style="float:right;" class="btn btn-primary float-right">Login</button>
            </form>
        </div>
    </div>
</div>